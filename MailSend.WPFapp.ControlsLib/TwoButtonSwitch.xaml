<UserControl x:Class="MailSend.WPFapp.ControlsLib.TwoButtonSwitch_clumsy"
             x:Name="Self"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:MailSend.WPFapp.ControlsLib"
             mc:Ignorable="d" 
             d:DesignHeight="50" d:DesignWidth="200">
    <DockPanel>
        <Button DockPanel.Dock="Left" x:Name="LeftButton" Margin="3,0,3,0" Padding="5,0,5,2"
                Content="{Binding NameLeft}" Width="auto" Click="LeftButton_Click"/>
        <Button DockPanel.Dock="Right" x:Name="RightButton" Margin="3,0,3,0" Padding="5,0,5,2"
                Content="{Binding NameRight}" Width="auto" Click="RightButton_Click"/>
    </DockPanel>
</UserControl>
